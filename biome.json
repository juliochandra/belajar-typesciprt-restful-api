{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 75,
    "bracketSpacing": true,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "error",
        "noUnusedFunctionParameters": "error"
      },
      "nursery": {
        "noExportedImports": "error",
        "noNestedTernary": "error",
        "noSecrets": "error",
        "noTemplateCurlyInString": "error",
        "useExplicitType": "error"
      },
      "style": {
        "noDefaultExport": "error",
        "useThrowNewError": "error"
      },
      "suspicious": {
        "noConsole": "warn",
        "useAwait": "error",
        "noEmptyBlockStatements": "error"
      }
    }
  }
}

